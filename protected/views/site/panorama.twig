<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN">
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="description" content="">
    <meta name="author" content="">
    <!--meta name="viewport" content="width=device-width, initial-scale=1"-->

    <title>{{ this.pageTitle }}</title>
    {{ import('js', 'p2q_embed_object.js') }}
    {{ import('js', 'jquery-1.11.1.min.js') }}
    {{ import('js', 'bowser.min.js') }}
    {{ import('js', 'panorama.js') }}

    {# { import('css','jquery-ui.css') } #}
    {{ import('css', 'panorama.css') }}

    <script type="text/javascript">
        $(document).ready( function() {
            var arr = {};
            {% for pan in panorams %}
                if (arr['{{pan.createDate}}'] == undefined)
                    arr['{{pan.createDate}}'] = [];
                arr['{{pan.createDate}}'].push({
                    'swf': '{{pan.swf}}',
                    'mov': '{{pan.mov}}'
                });
            {% endfor %}
            panorama.init(arr);
        });

        var hasQuick = (bowser.safari || bowser.iphone) ? true : false;
    </script>
</head>
<body>

    <div class='page'>

        <div class='header'>
            <div class='navigation'>
                <div class='back'>
                    <a href="{{ static('Yii', 'app').createAbsoluteUrl('/') }}"><img src='/img/panorama-back-btn.png' alt='Вернуться'></a>
                </div>
                <div class='separator'></div>
                <div class='date'>
                    <select id='js-date'>
                        {% for arr in dates %}
                            {% set sel = loop.last ? 'selected="selected"' : '' %}
                            <option {{sel}} value='{{arr["createDate"]}}' date-type='{{arr["createDate"]}}'>{{arr["createDate"]}}</option>
                        {% endfor %}
                    </select>
                </div>
                <div class='views' id='js-views'></div>
            </div>
            <div class='logo'>
                <a href='/'><img src='/img/logo.png' width="143" height="51"></a>
            </div>
        </div>

        <div class='panorams' id='js-panorams'>

            {% for pan in panorams %}

                <div class='panorama' data-id='{{pan.swf}}'>
                <script type='text/javascript'>
                    if ((window.p2q_Version) && (window.p2q_Version>=2.0)) {

                        {% if pan.mov %}
                            if (hasQuick) {
                                p2q_EmbedQuicktime('/panorama/{{pan.mov}}.mov','100%','95%','bgcolor','#ffffff','scale','tofit','controller','true');
                            } else {
                        {% else %}
                            {
                        {% endif %}

                                var flashvars='';
                                p2q_EmbedFlash('/panorama/{{pan.swf}}.swf','100%','95%','allowFullScreen','true','FlashVars',flashvars);
                                if (!DetectFlashVer(9,0,0)) {
                                    document.write('<p class="warning">This content requires Adobe Flash Player Version 9 or higher. <a href="http://www.adobe.com/go/getflash/">Get Flash<\/a><\/p>');
                                }
                            }
                    } else {
                        document.writeln('<p class="warning">p2q_embed_object.js is not included or it is too old! Please copy this file into your html directory.<\/p>');
                    }
                </script>
                <noscript>
                    <p class='warning'>Please enable Javascript!</p>
                </noscript>
                </div>

            {% endfor %}

        </div>
    </div>

</body>
</html>
