<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
          "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="ru" lang="ru">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="language" content="en" />
    <title>{% block title %}{{ this.pageTitle }}{% endblock %}</title>
    {% block css %}
        {{ import('css','reset.css') }}
        {{ import('css','client.css') }}
        {{ import('css','main.css') }}
    {% endblock %}
    {% block js %}
        {{ import('js','jquery-2.0.0.js') }}
        {{ import('js','app.js') }}
    {% endblock %}
    {{ widget('ext.widgets.social.VkWidget') }}
</head>
<body>
    {{ widget('ext.widgets.social.FbWidget') }}

    <div id='head-wrap'>
        <div id='head'>
            {{ widget('ext.widgets.HeaderWidget') }}
        </div>
    </div>

    <div id='body-wrap'>
        <div id='body'>
            {% block content %}{% endblock %}
        </div>
    </div>

    <div id='footer-wrap'>
        <div id='footer'>
            {{ widget('ext.widgets.FooterWidget') }}
        </div>
    </div>

</body>
</html>