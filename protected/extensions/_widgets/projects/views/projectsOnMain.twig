{{ import('css','projectsOnMain.css','ext.widgets.projects.views') }}

<div class='works-on-main-widget'>

    <div class='works-on-main-big  grid32 gridHeight33 left'>
        {% if bigWork %}
            {% set link = static('CHtml', 'normalizeUrl', [{'0':'/projects/projects/show','id':bigWork.id}]) %}
            <div class='grid-left2'>
                <div class='works-on-main-title gridHeight2 titleColor'>Наши новые работы</div>
                <div class='works-on-main-big-image'><a href='{{link}}'><img src='{{ bigWork.getImageBigUrl() }}'></a></div>
                <div class='gridHeight1'><div class='works-on-main-big-title'></div></div>
                <div class='works-on-main-big-desc  text15 gridHeight1 grid-bottom1'>{{ bigWork.descBig|raw }}</div>
            </div>
        {% endif %}
    </div>
    <div class='works-on-main-cont  grid48 gridHeight33 left'>
    {% for work in works %}
        {{ widget('ext.widgets.projects.ProjectItemWidget', {'project':work, showDate:false} ) }}
        {% if loop.index == 3 %}
            <div class='clear'></div>
        {% endif %}
    {% endfor %}
    </div>

</div>