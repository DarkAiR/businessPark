{{ import('css','newsLenta.css','ext.widgets.mainPage.css') }}

<script type="text/javascript">
    $(document).ready( function()
    {
        $('.news-lenta-item').click( function()
        {
            window.location.href = $(this).attr('href');
        });
    });
</script>

<div class='news-lenta-widget'>
    {% for item in news %}

        <table class='item' border=0 cellpadding="0" cellspacing="0">
        <tr>
            <td class='tablecol1'></td>
            <td class='tablecol2'>
                <div class='date'>
                    {{ item.date }}
                </div>
            </td>
        </tr>
        <tr>
            <td class='tablecol1'>
                <div class='image'>
                    <img src='{{ item.image }}'>
                </div>
            </td>
            <td class='tablecol2'>
                <div class='text'>
                    <a href='{{ item.link }}'>{{ item.text|raw }}</a>
                </div>
            </td>
        </tr>
        </table>
    
    {% endfor %}
</div>