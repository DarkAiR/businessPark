{% extends 'modules/news/views/base.twig' %}

{% block css %}
    {{ parent() }}
    {{ import('css','index.css', 'application.modules.news.css') }}
{% endblock %}

{% block newsBack %}
{% endblock %}

{% block newsLeftCol %}
{% endblock %}

{% block newsContent %}
    {% set imageW = const('News', 'IMAGE_SMALL_W') %}

    <table border=0 cellpadding="0" cellspacing="0">
        {% for item in news %}
        <tr class='item'>
            <td class='image'>
                <img src='{{ item.getImageUrl() }}' style='width:{{imageW}}px'>
            </td>
            <td>
                <div class='textBlock'>
                    <div class='date'>{{ static('DateHelper', 'formatNewsDate', [item.createTime]) }}</div>
                    <div class='title'><a href='{{ item.getNewsLink() }}'>{{ item.title|raw }}</a></div>
                    <div class='text'>{{ item.shortDesc|raw }}</div>
                </div>
            </td>
        </tr>
        {% endfor %}

        <tr class='item'>
            <td class='image'></td>
            <td class='moreBtn'>
                Загрузить еще новости
            </td>
        </tr>
    </table>
{% endblock %}